

<% if @checkout.errors.any? %>
    <% @checkout.errors.full_messages.each do |msg| %>
    <%= msg %>
    <% end%>
<% end%>

<%= form_for @checkout do |f| %>
    <%= f.label :user %>
    <%= f.collection_select :user_id, User.all, :id, :name, include_blank: true %>
    <%= f.label :book %>
    <%= f.collection_select :book_id, Book.all, :id, :title, include_blank: true %>
    <%= f.submit %>
<% end%>